<main>
    <div class="zima">
    <div class="container">
      <% for (item of test) { 
          if(item.id == id){
        %>
          <div class="wrapper" style="text-align: -webkit-center;">
            <form action="/login" method="post" name="Login_Form" class="form-signin" style="width: 30%;">
